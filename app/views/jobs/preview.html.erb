<div>
	<div class="widget-body">
		<div class="widget-main">
			<div class="row-fluid">
				<div id="fuelux-wizard" style="width: 50%; margin-left: -30px;" class="row-fluid" data-target="#step-container">
					<ul class="wizard-steps">
						<li onclick="location.href='<%= edit_job_path(@job) %>'" class="complete">
							<span class="step">1</span>
							<span class="title">Create</span>
						</li>

						<li class="active">
							<span class="step">2</span>
							<span class="title">Preview</span>
						</li>

						<li class="">
							<span class="step">3</span>
							<span class="title">Publish</span>
						</li>
					</ul>
				</div>
				<br>
				<h3 id="step-title">Step 2: Preview Your Posting</h3>
				<hr>
				<div class="row-fluid wizard-actions">
					<a class="btn-u btn-lightblue btn-medium" href="<%= publish_job_path(@job) %>">
						Continue to Step 3 to publish your posting
					</a>
					<a class="btn-small gray" href="<%= edit_job_path(@job) %>">
						 <img src="/assets/back-arrow.png"/>
						 Make changes
					</a>
				</div>
				<hr>
				<div class="step-content" id="step-container">
					<div class="step-pane active">
						<!-- Preview Content -->
						<div class="left-main-div">
							<div class="row-fluid">
								<div class="span8">
									<h2><%= @job.title %></h2>
									<h4>
								  	<strong><%= @job.company_name %></strong> - 
								  	<normal><%= @job.location %></normal>
								  </h4>

								  <p><%= link_to @job.url, @job.url %></p>
								  <div class="pull-left blog-page blog-item">
								   	<ul class="inline blog-tags pull-left">
								    	<%= show_tags(@job) %>
								    </ul>
								  </div>
								</div>
								<div class="span4">
									<%= image_tag @job.company_logo.url(:medium), :style => "margin-top:15px;" %>
								</div>
							</div>
						  <p>
						  	<%= @job.description.html_safe unless @job.description.nil? %>
						  </p>

						  <div class="alert apply-info">
						  	<h5>Apply for this position</h5>
						  	<p>
						  		<%= @job.apply_information.gsub("\n", "<br>").html_safe unless @job.apply_information == "" %>
						  	</p>
						  </div>

						  <div class="row-fluid wizard-actions">
								<a class="btn-u btn-lightblue btn-medium" href="<%= publish_job_path(@job) %>">
									Continue to Step 3 to publish your posting
								</a>
								<a class="btn-small gray" href="<%= edit_job_path(@job) %>">
									 <img src="/assets/back-arrow.png"/>
									 Make changes
								</a>
							</div>
						</div><!-- /Preview Content End -->
						<div class="sidebar share-with-social">
							<img src="/assets/preview_share.png" style="width: 270px">
						</div>
					</div>
				</div>
			</div>
		</div><!--/widget-main-->
	</div><!--/widget-body-->
</div>