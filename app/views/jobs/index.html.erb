<div class="container">
	<div class="row">
		<div class="joblist">
			<div class="row-fluid">
				<div class="span6">
					<strong style="font-size: 26px;">
						<%= @jobs.length %> Jobs for developers
					</strong>
					<p class="gray">Latest post about <%= Job.last.elapsed %> ago</p>
				</div>
				
				<div class="span3 pull-right">
					<br>
					<select name="sort_by" class="selectpicker pull-right" data-width="130px">
				    <option value="date">Date</option>
				    <option value="name">Name</option>
				  </select>
				</div>
			</div>

			<% @jobs.each_with_index do |job, i| %>
				<div class="row-fluid <%= 'apply-info' if job.highlighted == true %>">
					<div class="new-tag pull-left">
						<%= link_to 'NEW', '', :class => 'btn btn-u-mini' if job.elapsed_date < 6%>
					</div>
		      <div class="span11 booking-blocks">
		        <div style="overflow:hidden;">
		        	<h4>
		        		<%= link_to job.title, job_path(job), :style => 'float: left;' %>
		        		<span class="hour pull-right light-gray"><%= job.elapsed %> ago</span>
		        	</h4>
		        	<br>
	            <h5>
	            	<strong><%= job.company_name %> - </strong>
	            	<normal><%= job.location %></normal>
	            </h5>
	            <% description = strip_tags(job.description) %>
	            <p class="light-gray"><%= description.slice!(0, 105) %> 
	            	<% if description.length > 105 %>
	            		...
	            	<% end %>
	            </p>
		        </div>
		        <div class="pull-left blog-page blog-item">
		         	<ul class="unstyled inline blog-tags pull-left">
	            	<%= show_tags(job) %>
	            </ul>
	          </div>
	          <%#= link_to 'How to Apply', '', :class => 'btn btn-u-mini pull-right' %>
		      </div>
		    </div><!-- Row Fliud for each Job-->
		    <%= "<hr>".html_safe if i != @jobs.length-1 %>
      <% end %>
    </div><!-- Job List Pane -->
    <div class="sidebar">
    	<br>
			<a href="<%= new_job_path %>" class="btn-u post-job-btn">
				POST A JOB - <span style="font-size: 13px;">250$ for 30 days</span></a>
			<%= render :partial => "common/search_form" %>
	    </div><!-- Right Side Bar -->
    </div>
  </div>
</div>
<!-- <span class="paperclip"></span> -->

<script type="text/javascript">
  $(function(){
    // $.fn.formLabels();
    $("#search-form").submit(function(){
      var formVal = $("form").serialize();
      parent.$("#default div.results").html(formVal);
    });

    $('.selectpicker').selectpicker({
      'selectedText': 'cat'
    });
  });
</script>