<%#= render_shareable :buttons => ['twitter', 'facebook', 'linkedin'] %>
<div class="left-main-div">
	<div class="row-fluid">
		<div class="span8">
			<h2><%= @job.title %></h2>
			<h4>
		  	<strong><%= @job.company_name %></strong> - 
		  	<normal><%= @job.location %></normal>
		  </h4>

		  <p><%= link_to @job.url, @job.url %></p>
		  <div class="pull-left blog-page blog-item">
		   	<ul class="inline blog-tags pull-left">
		    	<%= show_tags(@job) %>
		    </ul>
		  </div>
		</div>
		<div class="span4">
			<%= image_tag @job.company_logo.url(:medium), :style => "margin-top:15px;" %>
		</div>
	</div>
  <p>
  	<%= @job.description.html_safe unless @job.description.nil? %>
  </p>

  <div class="alert apply-info">
  	<h5>Apply for this position</h5>
  	<p>
  		<%= @job.apply_information.gsub("\n", "<br>").html_safe unless @job.apply_information == "" %>
  	</p>
  </div>
</div>
<div class="sidebar share-with-social">
	<a href="<%= new_job_path %>" class="btn-u post-job-btn">
		POST A JOB - <span style="font-size: 13px;">250$ for 30 days</span>
	</a>
